<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@android:color/white">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/music_bar2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/music_bar1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_marginRight="3dp" />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/music_bar1"
        app:layout_constraintRight_toLeftOf="@id/music_bar3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/music_bar2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp" />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/music_bar2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/music_bar3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_marginLeft="3dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

