                android:id="@+id/nowplaying_elapsedtime"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="0: 00"/>
            <!--                android:textColor="#FFFFFF"-->


            <TextView
