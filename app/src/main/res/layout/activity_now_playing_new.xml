                android:id="@+id/nowplaying_duration"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="0: 00"/>

        </RelativeLayout>

