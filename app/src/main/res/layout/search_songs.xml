<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="60dp"
    android:background="@drawable/basic_ripple"
    android:clickable="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:id="@+id/search_songs_albumart_holder">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/search_songs_albumart"/>

        <com.app.studiomusic.Common.EqualizerView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            app:foregroundColor="@color/white"
            app:animDuration="4000"
            app:customDimension="24dp"
            android:id="@+id/search_songs_equalizerview"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/search_songs_albumart_holder"
        app:layout_constraintRight_toLeftOf="@id/search_songs_track_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:id="@+id/search_songs_track_details_holder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:letterSpacing="-0.01"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:id="@+id/search_songs_track_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/search_songs_lyrics_tag">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/lyrics_tag_drawable"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="LYRICS"
                        android:textSize="7sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:maxWidth="165dp"
                    android:layout_height="match_parent"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_regular"
                    android:letterSpacing="-0.01"
                    android:id="@+id/search_songs_track_artist"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RelativeLayout
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:id="@+id/track_dot_separator">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            app:shapeAppearanceOverlay="@style/profileImage"
                            android:background="#B3FFFFFF"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="45dp"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"
                        android:layout_height="match_parent"
                        android:id="@+id/search_songs_track_duration"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/search_songs_track_menu"
        android:clickable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_button"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>