<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studiomusic" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/studiomusic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/studiomusic_launcher_round"
        android:supportsRtl="true" >
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/no_action_bar_login" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:theme="@style/no_action_bar" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="studiomusic.herokuapp.com"
                    android:scheme="https" />
                <data
                    android:host="studiomusic.herokuapp.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/no_action_bar" />
    </application>

</manifest>